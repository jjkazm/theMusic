<% include ../partials/header %>
<div class="container">
    <div class = "row justify-content-md-center padding">
      <div class="col-md-6 col-sm-12">
        <h1>Edit <%=album.title%></h1>
        <div class="album_form">
            <form action="/albums/<%=album._id%>?_method=PUT" method="POST">
              <div class="form-group">
                <label for="albumName">Album title</label>
                <input type="text" class="form-control" id="albumName" name="updatedAlbum[title]" value="<%=album.title%>">
              </div>
              <div class="form-group">
                <label for="albumArtist">Artist</label>
                <input type="text" class="form-control" id="albumArtist" name="updatedAlbum[artist]" value="<%=album.artist%>">
              </div>
              <div class="form-group">
                <label for="albumYear">Year it was created</label>
                <input type="text" class="form-control" id="albumyear" name="updatedAlbum[year]" value="<%=album.year%>">
              </div>
              <div class="form-group">
                <label for="albumCover">Album cover url</label>
                <input type="text" class="form-control" id="albumCover" name="updatedAlbum[cover]" value="<%=album.cover%>">
              </div>
              <div class="form-group">
                <label for="albumDesc">Description</label>
                <input type="text" class="form-control" id="albumDesc" name="updatedAlbum[description]" value="<%=album.description%>">
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
  </div>

